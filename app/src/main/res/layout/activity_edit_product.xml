<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbackbackback"
    tools:context=".EditProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/lplpdd"
        android:elevation="0dp"
        android:background="@drawable/square_back"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/Theme.STSCom.PopupOverlay" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="8dp"
            android:id="@+id/back_sett_edit_pro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Product"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/back_sett_edit_pro" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lplpdd"
        android:layout_marginBottom="48dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/asasasas"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/svvvA"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-150dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/_nlextra_background"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/Product_Name_dataA_CC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/svvvA"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_margin="30dp"
                android:background="@drawable/boycover_a">

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewPagerShow_Edit_Pro"/>

                <com.viewpagerindicator.CirclePageIndicator
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/indicator_Edit_Pro"
                    android:layout_below="@+id/viewPagerShow_Edit_Pro"
                    android:padding="10dp"
                    android:layout_marginTop="-30dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/colorSpinner_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/asasasas"
                android:background="@drawable/loginbutton"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/snrSpinner_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/colorSpinner_CCJ"
                android:background="@drawable/loginbutton"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="SnR"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Price_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/snrSpinner_CCJ"
                android:layout_margin="10dp"
                android:background="@drawable/loginbutton"
                android:padding="10dp"
                android:text="Price"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Stock_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/Price_CCJ"
                android:background="@drawable/loginbutton"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Stock"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditPriceAA_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/loginbutton"
                android:layout_below="@+id/Stock_CCJ"
                android:inputType="number"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:hint="Update Price" />

            <EditText
                android:id="@+id/EditStockAA_CCJ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/loginbutton"
                android:layout_below="@+id/EditPriceAA_CCJ"
                android:layout_margin="10dp"
                android:hint="Update Stock" />

            <Button
                android:id="@+id/SubButtAddJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditStockAA_CCJ"
                android:layout_centerHorizontal="true"
                android:layout_margin="18dp"
                android:padding="15dp"
                android:text="Submit"
                android:textSize="20dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>