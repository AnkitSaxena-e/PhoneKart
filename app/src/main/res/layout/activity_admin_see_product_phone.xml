<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSeeProductPhoneActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lalaaaqa"
        android:text="Edit Primary Phone"
        android:background="@color/BackB"
        android:textSize="16dp"
        android:padding="10dp"
        android:textStyle="italic|bold"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:elevation="5dp"
        android:layout_below="@+id/lalaaaqa"
        android:id="@+id/search_view_EPP"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EPP_ReLay"
        android:padding="5dp"
        android:layout_below="@+id/search_view_EPP"
        android:layout_marginTop="10dp">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>