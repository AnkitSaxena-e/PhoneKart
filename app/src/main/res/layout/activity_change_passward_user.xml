<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbackbackback"
    tools:context=".ChangePasswardUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/lplppp"
        android:elevation="0dp"
        android:background="@drawable/square_back"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/Theme.STSCom.PopupOverlay" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="8dp"
            android:id="@+id/back_sett_change_pass"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/back_sett_change_pass" />

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/lplppp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/channagepaaa"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Old_Passward_cp"
            android:background="@drawable/loginbutton"
            android:hint="Your Old Passward"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/Old_Passward_cp"
            android:id="@+id/New_Passward_cp"
            android:hint="Your New Passward"
            android:layout_marginLeft="10dp"
            android:background="@drawable/loginbutton"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/New_Passward_cp"
            android:id="@+id/Conferm_New_Passward_cp"
            android:background="@drawable/loginbutton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Conferm Your New Passward"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Conferm"
            android:background="@drawable/joinbutton"
            android:layout_centerHorizontal="true"
            android:id="@+id/Change_Button_cp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/Conferm_New_Passward_cp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>